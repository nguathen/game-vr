{
  "name": "vr-quest-game",
  "version": "2.0.0",
  "description": "VR Target Shooter V2 â€” multi-mode, weapon system, XP progression, Firebase cloud sync",
  "type": "module",
  "scripts": {
    "dev": "vite src --port 3000 --open",
    "build": "vite build && node -e \"const{cpSync}=require('fs');cpSync('public','dist',{recursive:true})\"",
    "preview": "vite preview --port 3000",
    "server": "node server/index.js",
    "start": "concurrently \"npm run dev\" \"npm run server\"",
    "prod": "npm run build && node server/index.js",
    "tunnel": "npx cloudflared tunnel --url http://localhost:3001"
  },
  "dependencies": {
    "canvas": "^3.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "firebase": "^12.8.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "vite": "^6.1.0"
  }
}
